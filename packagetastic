#!/usr/bin/env python
# -*- coding: UTF-8 -*-

import os, sys
import lib_packagetastic

# Move the path to the location of the current file
os.chdir(os.sys.path[0])

# Show the usage if the args are wrong
if len(sys.argv) != 3:
	print "usage:"
	print "./packagetastic [distro] [package]\n\n"
	exit()

# Get the arguments
package_name = sys.argv[2]
distro_name = sys.argv[1]

# Build the package
lib_packagetastic.build(distro_name, package_name)


